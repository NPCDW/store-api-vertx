<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <properties>
        <property name="LOG_HOME" value="/data/logs"/>
        <property name="PROJECT_NAME" value="${project.name}"/>
        <property name="PATTERN" value="%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%vcl{traceId}] [%tid %thread] [%-40.40logger{39}:%line] - %msg%n"/>
    </properties>
    <Appenders>
        <!--输出到控制台-->
        <Console name="console" target="SYSTEM_OUT">
            <PatternLayout>
                <Pattern>${PATTERN}</Pattern>
            </PatternLayout>
        </Console>

        <!--输出到文件-->
        <RollingRandomAccessFile name="file-info" fileName="${LOG_HOME}/${PROJECT_NAME}/info.log" filePattern="${LOG_HOME}/${PROJECT_NAME}-info.%d{yyyy-MM-dd}.%i.log">
            <ThresholdFilter level="info" onMatch="ACCEPT" onMismatch="DENY"/>
            <PatternLayout>
                <Pattern>${PATTERN}</Pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true" />
                <SizeBasedTriggeringPolicy size="100 MB"/>
            </Policies>
            <DefaultRolloverStrategy max="30"/>
        </RollingRandomAccessFile>

        <RollingRandomAccessFile name="file-error" fileName="${LOG_HOME}/${PROJECT_NAME}/error.log" filePattern="${LOG_HOME}/${PROJECT_NAME}-error.%d{yyyy-MM-dd}.%i.log">
            <ThresholdFilter level="error" onMatch="ACCEPT" onMismatch="DENY"/>
            <PatternLayout>
                <Pattern>${PATTERN}</Pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true" />
                <SizeBasedTriggeringPolicy size="100 MB"/>
            </Policies>
            <DefaultRolloverStrategy max="30"/>
        </RollingRandomAccessFile>
    </Appenders>

    <Loggers>
        <Root level="info">
            <AppenderRef ref="file-info"/>
            <AppenderRef ref="file-error"/>
            <AppenderRef ref="console"/>
        </Root>

        <logger name="com.github.npcdw" level="debug" additivity="false">
            <AppenderRef ref="file-info"/>
            <AppenderRef ref="file-error"/>
            <AppenderRef ref="console"/>
        </logger>
    </Loggers>
</configuration>
